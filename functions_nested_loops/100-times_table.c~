#include "main.h"
#include <stdio.h>
/**
 * print_times_table - check the code.
 * @n:input
 * Return: Always 0.
 */
void print_times_table(int n)
{
if (n < 15 && n > 0)
{
int i, j, a;
for (i = 0 ; i <= n ; i++)
{
for (j = 0 ; j <= n ; j++)
{
a = i * j;
if (a < 10)
{
if (j == n)
{
printf("%d", a);
}
else
{
printf("%d,  ", a);
}
}
else
{
if (j == n)
{
printf("%d", a);
}
else
{
printf("%d, ", a);
}
}
}
printf("\n");
}   
}
}
